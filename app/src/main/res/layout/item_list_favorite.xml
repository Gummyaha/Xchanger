<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/from_currency"
        style="@style/director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_41sdp"
        android:layout_marginLeft="@dimen/_41sdp"
        android:textSize="@dimen/_14sdp"
        android:paddingLeft="@dimen/_50sdp" />

    <TextView
        android:id="@+id/arrow"
        style="@style/director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@id/from_currency"
        android:background="@drawable/ic_arrow_forward" />

    <TextView
        android:id="@+id/to_currency"
        style="@style/director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14sdp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_104sdp"
        android:layout_marginRight="@dimen/_104sdp"
        android:layout_toRightOf="@id/arrow" />

    <Button
        android:id="@+id/button7"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignTop="@+id/from_currency"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="@dimen/_48sdp"
        android:layout_marginRight="@dimen/_48sdp"
        android:background="@drawable/ic_delete_black_24dp"
        android:textColor="#FFF" />


</RelativeLayout>

